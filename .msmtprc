# Set default values for all following accounts.
defaults
auth           on
tls            on
tls_trust_file /etc/ssl/certs/ca-certificates.crt
logfile        ~/.msmtp.log

# Gandi
account        gandi
host           mail.gandi.net
port           587
from           ${MAIL_FROM}
user           ${MAIL_USER}
password       ${MAIL_PASSWORD}

# Set a default account
account default : gandi